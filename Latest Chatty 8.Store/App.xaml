<Application x:Class="Latest_Chatty_8.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:common="using:Latest_Chatty_8.Shared"
             xmlns:local="using:Latest_Chatty_8"
             RequestedTheme="Dark">

	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="ms-appx:///Styles/Local.xaml" />
			</ResourceDictionary.MergedDictionaries>

			<!--  Application-specific resources  -->

			<x:String x:Key="AppName">LATEST CHATTY 8</x:String>

			<!--  Basic foreground and background colours  -->
			<SolidColorBrush x:Key="ApplicationPageBackgroundThemeBrush" Color="#212121" />
			<SolidColorBrush x:Key="ApplicationPageForegroundThemeBrush" Color="White" />

		</ResourceDictionary>

	</Application.Resources>
</Application>
