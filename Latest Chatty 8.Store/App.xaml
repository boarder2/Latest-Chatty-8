<Application
    x:Class="Werd.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    RequestedTheme="Dark">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="ms-appx:///Styles/Local.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!--  Application-specific resources  -->

            <x:String x:Key="AppName">Werd</x:String>
            <x:Double x:Key="ControlContentFontSize">15</x:Double>
            <x:Double x:Key="ControlContentThemeFontSize">15</x:Double>
            <!--  Basic foreground and background colours  -->
            <SolidColorBrush x:Key="ApplicationPageBackgroundThemeBrush" Color="#212121" />
            <SolidColorBrush x:Key="ApplicationPageForegroundThemeBrush" Color="White" />
            <x:Double x:Key="InlineButtonPadding">8</x:Double>
            <x:Double x:Key="InlineToggleButtonPadding">10</x:Double>
            <x:Double x:Key="InlineButtonFontSize">20</x:Double>
            <x:Double x:Key="PreviewRowHeight">34</x:Double>
        </ResourceDictionary>

    </Application.Resources>
</Application>
