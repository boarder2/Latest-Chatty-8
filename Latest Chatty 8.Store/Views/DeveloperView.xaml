<Page x:Class="Latest_Chatty_8.Views.DeveloperView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:Latest_Chatty_8.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

	<Grid Margin="4" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
		<StackPanel Orientation="Vertical" Margin="4,0,0,0">
			<StackPanel Orientation="Horizontal">
				<TextBlock VerticalAlignment="Center" Text="Thread ID" />
				<TextBox x:Name="toastThreadId"
				         Margin="4,0,0,0"
				         Text="29374320" />
				<Button Margin="4,0,0,0"
				        Click="SendTestToast"
				        Content="Send Toast" />
			</StackPanel>
			<Button Margin="0,4,0,0" Content="Reset Ignored Users" Click="ResetIgnoredUsersClicked" />
			<Button Margin="0,4,0,0" Content="Reset Ignored Keywords" Click="ResetIgnoredKeywordsClicked" />
		</StackPanel>
	</Grid>
</Page>
