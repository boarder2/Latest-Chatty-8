<Page x:Class="Latest_Chatty_8.Views.DeveloperView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

	<Grid Margin="4" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
		<StackPanel Margin="4,0,0,0" Orientation="Vertical">
			<StackPanel Orientation="Horizontal">
				<TextBlock VerticalAlignment="Center" Text="Thread ID" />
				<TextBox x:Name="ToastThreadId"
				         Margin="4,0,0,0"
				         Text="29374320" />
				<Button Margin="4,0,0,0"
				        Click="SendTestToast"
				        Content="Send Toast" />
				<Button Margin="4,0,0,0"
						  Click="LoadThreadById"
						  Content="Load Thread" />
			</StackPanel>
			<Button Margin="0,4,0,0"
			        Click="ResetIgnoredUsersClicked"
			        Content="Reset Ignored Users" />
			<Button Margin="0,4,0,0"
			        Click="ResetIgnoredKeywordsClicked"
			        Content="Reset Ignored Keywords" />
		</StackPanel>
	</Grid>
</Page>
