<Grid x:Class="Latest_Chatty_8.Views.Splash"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:common="using:Latest_Chatty_8.Shared"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:Latest_Chatty_8.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Background="#ED2300"
      mc:Ignorable="d">
   <Image x:Name="splashImage" Source="ms-appx:///Assets/SplashScreen.png" />
   <StackPanel x:Name="statusStuff"
               Margin="0,0,0,125"
               HorizontalAlignment="Center"
               VerticalAlignment="Bottom"
               Orientation="Vertical">
      <ProgressRing Width="50"
                    Height="50"
                    Foreground="White"
                    IsActive="True" />
      <TextBlock Margin="6,0,0,0"
                 FontSize="20"
                 FontWeight="SemiBold"
                 Text="{Binding LoadStatus}" />
   </StackPanel>
</Grid>
