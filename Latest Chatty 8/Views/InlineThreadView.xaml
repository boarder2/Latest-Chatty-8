	<Grid Margin="0, 6, 6, 6" Style="{StaticResource LayoutRootStyle}">
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<!--  Back button and page title  -->
		<Grid x:Name="grid"
		      Grid.Row="0"
		      Margin="0,0,0,10">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<Button x:Name="backButton"
			        Grid.Column="0"
			        Margin="36,36,36,36"
			        VerticalAlignment="Top"
			        Click="GoBack"
			        IsEnabled="{Binding Frame.CanGoBack,
			                            ElementName=pageRoot}"
			        Style="{StaticResource BackButtonStyle}" />

			<root:InlineThreadControl Grid.Column="1" DataContext="{StaticResource CommentsViewSource}" />

			<ProgressBar x:Name="loadingBar"
			             VerticalAlignment="Top"
			             IsIndeterminate="True" />
		</Grid>
	</Grid>

