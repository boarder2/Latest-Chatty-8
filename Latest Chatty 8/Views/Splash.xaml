<Grid x:Class="Latest_Chatty_8.Views.Splash"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:common="using:Latest_Chatty_8.Common"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:Latest_Chatty_8.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Background="#ED2300"
      mc:Ignorable="d">
    <Image x:Name="splashImage" Source="ms-appx:///Assets/SplashScreen.png" />
    <StackPanel x:Name="statusStuff" HorizontalAlignment="Center" VerticalAlignment="Bottom" Orientation="Vertical" Margin="0,0,0,125">
        <ProgressRing Width="50"
                      Height="50"
                      IsActive="True" />
        <TextBlock Margin="6,0,0,0"
                   FontSize="20"
                   FontWeight="SemiBold"
                   Text="{Binding LoadStatus}" />
    </StackPanel>
</Grid>